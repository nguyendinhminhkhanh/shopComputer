<!-- Main content -->
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-4">
    <h1>Tất cả đơn hàng</h1>

    <!-- Search form -->
    <div class="col-md-6">
        <form>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Tìm kiếm">
                <button class="btn btn-secondary" type="submit">Tìm kiếm</button>
            </div>
        </form>
    </div>

    <div class="row">
        <!-- Thêm/Sửa tài khoản -->
        <div class="col-lg-3 col-md-4 col-xs-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Thêm tài khoản</h3>
                </div>
                <form>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Tên</label>
                            <input type="text" class="form-control" required>
                            <label class="mt-2">Tài khoản</label>
                            <input type="text" class="form-control" required>
                            <label class="mt-2">Số điện thoại</label>
                            <input type="text" class="form-control" required>
                            <label class="mt-2">Email</label>
                            <input type="email" class="form-control" required>
                            <label class="mt-2">Địa chỉ</label>
                            <textarea class="form-control" required></textarea>
                            <label class="mt-2">Quyền truy cập</label>
                            <select class="form-control">
                                <option value="1">Admin</option>
                                <option value="0">Customer</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success">Thêm</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Danh sách tài khoản -->
        <div class="col-lg-9 col-md-8 col-xs-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên</th>
                            <th>Tài khoản</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Quyền</th>
                            <th><input id="checkAll" type="checkbox" class='form-check-input' /></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Nguyễn Văn A</td>
                            <td>nguyenvana</td>
                            <td>0123456789</td>
                            <td>vana@example.com</td>
                            <td>Hà Nội</td>
                            <td>Admin</td>
                            <td><input type="checkbox" class="form-check-input" /></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Trần Thị B</td>
                            <td>tranthib</td>
                            <td>0987654321</td>
                            <td>tranthib@example.com</td>
                            <td>TP.HCM</td>
                            <td>Customer</td>
                            <td><input type="checkbox" class="form-check-input" /></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="7">
                                <ul class="pagination">
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                </ul>
                            </td>
                            <td><button class="btn btn-danger btn-sm">Xóa</button></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</main>