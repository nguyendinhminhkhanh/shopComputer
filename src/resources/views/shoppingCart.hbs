<style>
    #success-message {
        position: fixed;
        top: 10rem;
        right: 20px;
        background-color: #28a745;
        font-size: 1.5rem;
        color: white;
        padding: 12px 20px 12px 10px;
        border-radius: 6px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        z-index: 9999;
        font-weight: bold;
        transition: opacity 0.5s ease;
    }
</style>
{{#if message}}
<div id="success-message">
    <i class='bx bx-check'></i> {{message}}
</div>




<script>
    setTimeout(function () {
        const successBox = document.getElementById('success-message');
        if (successBox) {
            successBox.style.opacity = '0';
            setTimeout(() => successBox.style.display = 'none', 500); // đợi hiệu ứng kết thúc
        }
    }, 10000);
</script>
{{/if}}

<div class="py-5">
    <div class="container">
        <div id="cart-default" class="row">
            <div class="col-md-12">
                <!-- Kiểm tra nếu có sản phẩm trong giỏ -->
                <form action="" method="post">
                    <table class="table table-striped table-bordered table-hover border-dark align-middle text-center fs-2">
    <thead class="table-success">
        <tr>
            <th>#</th>
            <th>Hình ảnh</th>
            <th>Tên sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each cart}}
        <tr>
            <td>{{@index}}</td>
            <td><img src="/{{this.image}}" alt="{{this.name}}" width="60"></td>
            <td>{{this.name}}</td>
            <td class="text-danger">{{this.price}}<sup>đ</sup></td>
            <td>{{this.quantity}}</td>
            <td class="text-danger">{{multiply this.price this.quantity}}<sup>đ</sup></td>
            <td><button type="button" class="btn btn-sm btn-danger">Xóa</button></td>
        </tr>
        {{/each}}

        <tr>
            <td colspan="7" class="text-center">
                <p><b>Tổng số sản phẩm:</b> {{totalQuantity}}</p>
                <p><b>Tổng giá:</b> <span class="text-danger">{{totalPrice}}<sup>đ</sup></span></p>
            </td>
        </tr>

        <tr>
            <td colspan="2" class="text-center">
                <a href="/" class="btn btn-secondary">Quay lại</a>
            </td>
            <td colspan="3"></td>
            <td colspan="2" class="text-center">
                <a href="/order" type="button" class="btn btn-success">Đặt hàng</a>
            </td>
        </tr>
    </tbody>
</table>
                </form>

                <!-- Nếu không có sản phẩm -->
                <!--
                <div class="alert alert-warning text-center">
                    <h4>Bạn chưa đặt mua sản phẩm nào</h4>
                </div>
                -->
            </div>
        </div>
    </div>
</div>